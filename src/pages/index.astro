---
import Games from "../components/Games.vue";
import Layout from "../layouts/Base.astro";
import games from "../content/games.json";

const description =
    "A list of web-based games you can play with your friends. " +
    "All the games linked here are free to play, don't require you to create an " +
    "account or download anything, and work well over a video call.";
---

<Layout title="Web Game Index" description={description}>
    <main class="index">
        <h1>Web Game Index</h1>
        <section class="intro">
            <p>{description}</p>
            <p>
                Built with ðŸ§€ by <a href="https://tylermercer.net"
                    >Tyler Mercer</a
                >, <a href="https://danmercer.net">Dan Mercer</a>, and <a
                    href="https://mercer.dev">E.J. Mercer</a
                >.
            </p>
        </section>
        <Games client:idle games={games} />
    </main>
</Layout>

<style>
    h1 {
        margin-top: 40px;
        text-align: center;
        font-size: 2em;
        color: var(--text-high-contrast);
        text-decoration: underline;
        text-decoration-color: var(--accent);
        text-decoration-thickness: 4px;
        padding: 20px;
        border-radius: 5px;
        font-weight: bold;
        margin-left: auto;
        margin-right: auto;
    }

    .intro {
        max-width: 900px;
        padding: 0 40px;
        margin: 40px auto;
    }

    .intro p:not(:last-child) {
        margin-bottom: 1em;
    }
</style>
